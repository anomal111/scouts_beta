<div class="col-xs-12 col-sm-6 col-md-4">
<div class="well">

  <div class="row">
		<div class="col-xs-4">
			<%= image_tag issue.picture.url(:thumb) %>
		</div>
    <div class="col-xs-4">
      <h4><%= issue.title %></h4>
			<p><%= issue.mark %></p>
			<p><%= issue.date %></p>
    </div>
    <div class="col-xs-4">
      
      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Cena: <span style="color: green"><%= number_to_currency issue.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <%= f.hidden_field :issue_id, value: issue.id %>
          <!--<%= f.submit "Do koszyka", class: "btn btn-success btn-lg" %>-->
					<button type="submit" class="btn btn-success btn-lg"><i class="fa fa-cart-plus"></i> Do koszyka</button>
        </div>
      <% end %>
    </div>
    
  </div>
</div>
</div>