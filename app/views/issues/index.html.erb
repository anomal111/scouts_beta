<h1>Listing issues</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Mark</th>
      <th>Title</th>
      <th>Picture</th>
      <th>Volume</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.date %></td>
        <td><%= issue.mark %></td>
        <td><%= issue.title %></td>
        <td><%= issue.picture %></td>
        <td><%= issue.volume %></td>
        <td><price><%= number_to_currency(issue.price, precision: 2) %></price></td>
        <td><%= link_to 'Show', issue %></td>
        <td><% if can? :edit, @issues %><%= link_to 'Edit', edit_issue_path(issue) %><% else %>-<% end %></td>
        <td><% if can? :delete, @issues %><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %><% else %>-<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @issues %>
	<%= link_to 'New Issue', new_issue_path %>
<% end %>