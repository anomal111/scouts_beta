<!DOCTYPE html>
<html>
<head>
  <title>ScoutsBeta</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
		<div class="row">
        
	  
	  <nav class="navbar navbar-default">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#primary-nav">
		    	<span class="sr-only">Toggle navigation</span>
		      <span class="icon-bar"></span>
		      <span class="icon-bar"></span>
		      <span class="icon-bar"></span>
		    </button>
		    <%= link_to "Krajki ZHR", root_path, class: "navbar-brand" %>
		  </div>
			
			<div class="collapse navbar-collapse" id="primary-nav">
				<ul class="nav navbar-nav">
				  <% if current_user %>
						<li class="dropdown">
					  	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Profil <span class="caret"></span></a>
					    	<ul class="dropdown-menu" role="menu">
					         <li><%= link_to "Edytuj profil", edit_user_path(current_user.id) %></li>
					         <li><%= link_to "Wyloguj", :logout %></li>
					         <li><a href="#">Something else here</a></li>
					         <li class="divider"></li>
					         <li><a href="#">Separated link</a></li>
					         <li class="divider"></li>
					         <li><a href="#">One more separated link</a></li>
					        </ul>
					      </li>
				  <% else %>
				      <li><%= link_to "Zarejestruj się", new_user_path %></li>
				      <li><%= link_to "Zaloguj się", :login %></li>
				  <% end %>
				</ul>
			</div>
			<div class="nav navbar-nav navbar-right">
				<div class="cart-text"><%= render 'layouts/cart_text' %></div>
			</div>
	  </nav>
    </div>
	<div class="row">
		<div class="col-xs-6">
			<div class="messages"></div>
		</div>
	</div>
    <hr>
    <%= yield %>
  </div>

</body>
</html>
