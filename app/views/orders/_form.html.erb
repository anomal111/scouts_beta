<%= form_for(current_order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.hidden_field :status, :value => 'w realizacji' %>
    </div>
  <div class="field">
    <%= f.hidden_field :payment, :value => @date %>
  </div>

    <%= f.fields_for :address do |o| %>
        <div class="field">
          <%= o.label :name %><br>
          <%= o.text_field :name %>
        </div>
        <p>
          <%= o.label :surname %><br />
          <%= o.text_field :surname %>
        </p>
        <p>
          <%= o.label :street %><br />
          <%= o.text_field :street %>
        </p>
        <p>
          <%= o.label :number %><br />
          <%= o.text_field :number %>
        </p>
        <p>
          <%= o.label :city %><br />
          <%= o.text_field :city %>
        </p>
        <p>
          <%= o.label :zip_code %><br />
          <%= o.text_field :zip_code %>
        </p>
        <div class="field">
          <%= f.hidden_field :address_id, :value => @order.id %>
        </div>
        <div class="field">
          <%= f.hidden_field :address_type, :value => "guest" %>
        </div>
    <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
