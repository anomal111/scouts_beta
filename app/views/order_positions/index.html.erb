<h1>Listing order_positions</h1>

<table>
  <thead>
    <tr>
      <th>Ordinal</th>
      <th>Amount</th>
      <th>Completed</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_positions.each do |order_position| %>
      <tr>
        <td><%= order_position.ordinal %></td>
        <td><%= order_position.amount %></td>
        <td><%= order_position.completed %></td>
        <td><%= order_position.price %></td>
        <td><%= link_to 'Show', order_position %></td>
        <td><%= link_to 'Edit', edit_order_position_path(order_position) %></td>
        <td><%= link_to 'Destroy', order_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

