<h1>Zarejestruj się</h1>

<%= form_for @user, :html => {:class => 'form-horizontal'} do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :login, :class => 'col-sm-2 control-label' %>
			<div class="col-sm-10">
      	<%= f.text_field :login, :class => 'form-control' %>
			</div>
    </div>
    <div class="form-group">
      <%= f.label :email, :class => 'col-sm-2 control-label' %>
			<div class="col-sm-10">
      	<%= f.email_field :email, :class => 'form-control' %>
			</div>
    </div>
    <div class="form-group">
      <!--%= f.label :password, f.object.new_record? ? nil : "Change password", :class => 'col-sm-2 control-label' %-->
			<%= f.label :password, 'Hasło', :class => 'col-sm-2 control-label' %>
			<div class="col-sm-10">
      	<%= f.password_field :password, :class => 'form-control' %>
			</div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, 'Potwierdź hasło', :class => 'col-sm-2 control-label' %>
			<div class="col-sm-10">
      	<%= f.password_field :password_confirmation, :class => 'form-control' %>
			</div>
    </div>
    <h1>Adres</h1>
    <%= f.fields_for :address do |b| %>
        <div class="form-group">
          <%= b.label :name, 'Imię', :class => 'col-sm-2 control-label' %>
					<div class="col-sm-10">
          	<%= b.text_field :name, :class => 'form-control' %>
					</div>
        </div>
        <div class="form-group">
          <%= b.label :surname, 'Nazwisko', :class => 'col-sm-2 control-label' %>
					<div class="col-sm-10">
          	<%= b.text_field :surname, :class => 'form-control' %>
					</div>
        </div>

        <div class="form-group">
          <%= b.label :street, 'Ulica', :class => 'col-sm-2 control-label' %>
					<div class="col-sm-10">
          	<%= b.text_field :street, :class => 'form-control' %>
					</div>
        </div>

        <div class="form-group">
          <%= b.label :house_number, 'Numer domu', :class => 'col-sm-2 control-label' %>
					<div class="col-sm-10">
          	<%= b.text_field :house_number, :class => 'form-control' %>
					</div>
        </div>
        <div class="form-group">
          <%= b.label :apartment_number, 'Numer lokalu', :class => 'col-sm-2 control-label' %>
					<div class="col-sm-10">
          	<%= b.text_field :apartment_number, :class => 'form-control' %>
					</div>
        </div>
        <div class="form-group">
          <%= b.label :city, 'Miasto', :class => 'col-sm-2 control-label' %>
					<div class="col-sm-10">
          	<%= b.text_field :city, :class => 'form-control' %>
					</div>
        </div>

        <div class="form-group">
          <%= b.label :zip_code, 'Kod pocztowy', :class => 'col-sm-2 control-label' %>
					<div class="col-sm-10">
          	<%= b.text_field :zip_code, :class => 'form-control' %>
					</div>
        </div>
    <% end %>
    <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
      	<%= f.submit "Zarejestruj się", :class => "btn btn-primary" %>
			</div>
    </div>
<% end %>


<%= link_to 'Wstecz', root_path %>
