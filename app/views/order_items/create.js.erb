	$(".messages").append("<p class=\"bg-error\">Wystąpił problem. Prosimy spróbować ponownie poźniej.</p>")
<% else %>
  $(".cart-text").html("<%= escape_javascript(render 'layouts/cart_text') %>")
	$(".messages").append("<p class=\"bg-success\">Produkt dodany do karty!</p>")
<% end %>